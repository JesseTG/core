package de.polygonal.core.screen;

interface ScreenTransitionListener
{
	/**
	 * Called once a transition effect starts to show this screen and hide other ((e.g. a fade-in begins).
	 * 
	 */
	private function onShowStart(other:Screen):Void;
	
	/**
	 * Called once a transition effect has shown this screen and has hidden other ((e.g. a fade-in complete).
	 */
	private function onShowEnd(other:Screen):Void;
	
	/**
	 * Called once a transition effect starts to hide this screen and show other ((e.g. a fade-out begins).
	 */
	private function onHideStart(other:Screen):Void;
	
	/**
	 * Called once a transition effect has hidden this screen and has shown other ((e.g. a fade-out complete).
	 */
	private function onHideEnd(other:Screen):Void;
}